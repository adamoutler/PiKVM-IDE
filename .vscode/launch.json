    "version": "0.2.0",
    "configurations": [
        {
            "name": "KVMD Debug",
            "type": "python",
            "request": "launch",
            "program": "/usr/bin/kvmd",
            "args": ["/usr/bin/kvmd", "--run"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "/"
        },
        {
            "name": "KVMD-VNC Debug",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "Start kvmd-vnc in Debug Mode",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "justMyCode": false,
        }
    ]

